{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "target": "es2022",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*", "./dist/*"]
    }
  },
  "include": ["src"]
}
